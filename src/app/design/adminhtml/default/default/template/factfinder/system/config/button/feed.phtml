<script type="text/javascript">
    function exportToCsv() {
        new Ajax.Request('<?php echo $this->getAjaxCheckUrl() ?>', {
            method: 'get',
            onSuccess: function (transport) {
                var response = JSON.parse(transport.responseText);
                setExportToCsvMessage(response.message.message);
            },
            onFailure: function (transport) {
                setExportToCsvMessage('<?php echo $this->__('There were an error during feed export. Please check the server log and contact the technical support.') ?>');
            }
        });
    }

    function setExportToCsvMessage(message) {
        document.getElementById("ffExportInfo").innerHTML = message;
    }
</script>

